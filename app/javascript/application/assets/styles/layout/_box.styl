.box {
  background-color: #fff

  &--border-primary {
    border-top: 3px solid $primary
  }

  &--border-grey {
    border-top: 3px solid $grey
  }
  

  &__header {
    font-size: 2.4rem
    font-weight: 200
    line-height: 4rem
    display: block
    padding: 1.5rem 3rem
    border-bottom: 1px solid $grey
  }

  &__list {
    padding: 1rem 2rem 2rem
  }

  &__loader {
    background: #fff
    text-align: center
    padding: 1rem
  }

  &--with-content {
    padding: 3rem 4rem 
  }
}