.v-toolbar {
  z-index: 1000
}

.toolbar-logo {
  height: 4.8rem
  margin: .8rem
  display: inline-block

  &__img {
    height: 100%
    width: auto
  }
}

.toolbar-notification {
  color: $font-gray
}

$profile-height = 3.6rem

.toolbar-profile {
  height: $profile-height
  border-radius: ($profile-height / 2)
  padding: 0 ($profile-height * 1.2)
  margin-left: 1.8rem
  position: relative
  background-color: white
  transition: all .2s

  &:hover {
    background-color: $background-light
  }

  &__avatar {
    position: absolute
    top: 2px
    left: 0
  }

  &__fullname {
    font-size: 1.4rem
    line-height: $profile-height
  text-transform: uppercase
  }

  &__arrow {
    position: absolute
    top: ($profile-height / 6)
    right: ($profile-height / 6)
  }
}
