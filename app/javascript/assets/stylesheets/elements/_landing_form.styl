.landing-form {
  width: 75%
  padding: 3rem
  margin: -3rem auto 0

  &__heading {
    font-size: 4.2rem
    font-weight: 600

    &--dark {
      color: $font-gray
    }

    &--light {
      color $white
    }
  }

  &__question {
    font-size: 1.6rem
    text-align: center
    padding: 1rem

    span {
      transition: all .2s

      &:hover {
        text-decoration: underline
        cursor: pointer
      }
    }
  }
}