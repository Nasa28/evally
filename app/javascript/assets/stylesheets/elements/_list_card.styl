.list-card {
  background-color: #fff
  padding: 3rem 4rem 5rem
  border-radius: 3px

  &__header {
    font-size: 2.4rem
    font-weight: 200
    text-transform: uppercase
    display: inline-block
    padding: .5rem 2rem
    border-radius: 3px
    letter-spacing: .5rem
    background-color: $background-dark
    color: $white  
  }

  &__list {
    height: 30rem
    overflow-y: auto
    margin-top: 2.4rem

    scrollbar-styling()
  }
}