body {
  font-weight: 400
  font-size: 1rem
  line-height: 1.7
  color: $font-black

  .application {
    font-family: 'Muli', sans-serif !important
  }
}

.secondary-heading {
  font-size: 4.2rem
  font-weight: 600

  &--dark {
    color: $font-gray
  }

  &--light {
    color $white
  }
}

.no-content {
  &__header {
    font-weight: 200

    &--large {
      font-size: 2.1rem  
    }  
  }  
}