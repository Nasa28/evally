.widget {
  background-color: #fff

  &--border-primary {
    border-top: 3px solid $primary
  }

  &--border-grey {
    border-top: 3px solid $grey
  }

  &__header {
    font-size: 2.4rem
    font-weight: 200
    line-height: 4rem
    display: block
    padding: 1.5rem 3rem
    border-bottom: 1px solid $grey
  }

  &__body {
    padding: 2rem
  }

  &__loader {
    background: #fff
    text-align: center
    padding: 1rem
  }

  &__info {
    font-size: 2.1rem
    font-weight: 200
    text-align: center
  }
}
