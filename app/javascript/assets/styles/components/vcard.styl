.vcard {
  font-weight: 200

  &__fullname {
    font-size: 2.4rem
    font-weight: inherit
  }

  &__position {
    font-size: 1.6rem
    color: $font-gray-dark
    text-transform: uppercase
    font-weight: inherit
  }

  &__content {
    margin: 2rem 0
  }

  &__info {
    display: flex
    flex-direction: row
    font-size: 1.4rem
    padding: .5rem 0
  }

  &__value {
    margin-left: auto
    font-weight: bold
  }
}
