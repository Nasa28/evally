default: &default
  adapter: postgresql
  encoding: utf8
  host: <%= ENV['db_host'] %>
  username: <%= ENV['db_username'] %>
  password: <%= ENV['db_password'] %>
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: evally_development

test:
  <<: *default
  database: evally_test
