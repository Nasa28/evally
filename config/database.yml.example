default: &default
  adapter: postgresql
  encoding: utf8
  host: localhost
  username: postgres
  password:
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  primary:
    <<: *default
    database: evally_development
  hr:
    <<: *default
    database: evally_hr_development
    migrations_paths: db/hr_migrate

test:
  primary:
    <<: *default
    database: evally_test
  hr:
    <<: *default
    database: evally_hr_test
