{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "first_name", "last_name", "position", "group", "hired_on", "next_evaluation_at", "state", "released_at"],
    "properties": {
      "id" : { "type" : ["string", "number"] },

      "first_name" : { "type" : "string" },

      "last_name" : { "type" : "string" },

      "position" : { "type" : "string" },

      "group" : { "type" : "string" },

      "hired_on" : { "type" : "string" },

      "next_evaluation_at" : { "type" : ["string", "null"] },

      "public_token" : { "type" : "string" },

      "state" : { "enum" : ["hired", "experienced", "released"] },

      "released_at" : { "type" : ["string", "null"] },

      "position_set_at" : { "type" : ["string", "null"] },

      "evaluation" : { "type" : "object" },

      "position_changes" : { "type" : "array" },

      "skill" : { "type" : ["object", "null"] }
    }
  }
}
