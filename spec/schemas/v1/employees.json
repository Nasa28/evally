{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["data"],
  "properties" : {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "attributes"],
        "properties": {

          "id" : { "type" : ["string", "number"] },

          "type" : { "enum" : ["employee"] },

          "attributes" : {
            "type": "object",
            "required": ["first_name", "last_name", "position", "hired_at", "last_evaluation_at", "next_evaluation_at"],
            "properties": {

              "first_name" : { "type" : "string" },

              "last_name" : { "type" : "string" },

              "position" : { "type" : "string" },

              "hired_at" : { "type" : "string" },

              "last_evaluation_at" : { "type" : ["string", "null"] },

              "next_evaluation_at" : { "type" : ["string", "null"] }
            }
          }
        }
      }
    }
  }
}
